<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageIngenico"
        android:layout_width="1280dp"
        android:layout_height="120dp"
        android:background="#8C8B89"
        android:src="@drawable/ingenico" />

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="1280dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SpicePrice"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageIngenico"
        android:inAnimation="@anim/slide_left_in"
        android:outAnimation="@anim/slide_left_out" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff" >

            <ImageView
                android:id="@+id/imageBadiane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/flipper_badiane" />

            <TextView
                android:id="@+id/textBadiane"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageBadiane"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/imageBadiane"
                android:text="@string/str_badiane"
                android:textColor="#8C8B89"
                android:textSize="24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff" >

            <ImageView
                android:id="@+id/imagePaprika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/flipper_paprika" />

            <TextView
                android:id="@+id/textPaprika"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imagePaprika"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/imagePaprika"
                android:text="@string/str_paprika"
                android:textColor="#8C8B89"
                android:textSize="24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff" >

            <ImageView
                android:id="@+id/imagePavotBleu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="21dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/flipper_pavotbleu" />

            <TextView
                android:id="@+id/textPavotBleu"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imagePavotBleu"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/imagePavotBleu"
                android:text="@string/str_pavotbleu"
                android:textColor="#8C8B89"
                android:textSize="24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff" >

            <ImageView
                android:id="@+id/imageCannelle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="21dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/flipper_cannelle" />

            <TextView
                android:id="@+id/textCannelle"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageCannelle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/imageCannelle"
                android:text="@string/str_cannelle"
                android:textColor="#8C8B89"
                android:textSize="24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff" >

            <ImageView
                android:id="@+id/imageCurcuma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="21dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/flipper_curcuma" />

            <TextView
                android:id="@+id/textCurcuma"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageCurcuma"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/imageCurcuma"
                android:text="@string/str_curcuma"
                android:textColor="#8C8B89"
                android:textSize="24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff" >

            <ImageView
                android:id="@+id/imageReglisse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="21dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/flipper_reglissebaton" />

            <TextView
                android:id="@+id/textReglisse"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageReglisse"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/imageReglisse"
                android:text="@string/str_reglisse"
                android:textColor="#8C8B89"
                android:textSize="24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff" >

            <ImageView
                android:id="@+id/imageNigelle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="21dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/flipper_nigelle" />

            <TextView
                android:id="@+id/textNigelle"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageNigelle"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/imageNigelle"
                android:text="@string/str_nigelle"
                android:textColor="#8C8B89"
                android:textSize="24dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffffff" >

            <ImageView
                android:id="@+id/imageSumac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="21dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/flipper_sumac" />

            <TextView
                android:id="@+id/textSumac"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageSumac"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@+id/imageSumac"
                android:text="@string/str_sumac"
                android:textColor="#8C8B89"
                android:textSize="24dp" />
        </RelativeLayout>
    </ViewFlipper>

        <TextView
        android:id="@+id/SpicePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/btnNext"
        android:layout_marginLeft="520dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#E3001A"
        android:textSize="48dp" />

    <EditText
        android:id="@+id/spice_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/SpicePrice"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/SpicePrice"
        android:ems="3"
        android:inputType="number|numberDecimal" />

    <ImageView
        android:id="@+id/btnAddToCartSpice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_alignBottom="@+id/SpicePrice"
        android:layout_toRightOf="@+id/spice_quantity"
        android:clickable="true"
        android:src="@drawable/addtocart" />
    
    <Button
        android:id="@+id/btnPrevious"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_menu_back"
        android:text="Previous"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/ic_menu_forward"
        android:text="Next"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <AnalogClock
        android:id="@+id/analogClock1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewFlipper"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/btnViewCart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewTotal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:src="@drawable/viewcart" />

     <TextView
         android:id="@+id/textViewTotal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/imageIngenico"
         android:layout_marginTop="20dp"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true"
         android:textSize="32dp" />
     
     <ImageView
        android:id="@+id/btnActiveCodebar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnViewCart"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:src="@drawable/bar_code_reader_activation" />

</RelativeLayout>
