<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CarLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="1280dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#8C8B89"
        android:scrollbars="none"
        android:src="@drawable/ingenico" />
    
    <AnalogClock
        android:id="@+id/ac1"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    
    <ImageView
        android:id="@+id/buttonBuyAll"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/butActiveCodebar"
        android:layout_toLeftOf="@+id/butActiveCodebar"
        android:layout_marginRight="10dp"
        android:src="@drawable/label_blue_buy" />

    <TextView
        android:id="@+id/textViewTotalCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#8C8B89"
        android:layout_marginTop="20dp"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv2"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="52dp"
        android:text="@string/str_cartlist"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/buttonBin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewTotalCart"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:src="@drawable/bin" />
    
    <ImageView
        android:id="@+id/butActiveCodebar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonBin"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:src="@drawable/bar_code_reader_activation" />

</RelativeLayout>