<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CarLayoutId"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="1080dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#8C8B89"
        android:scrollbars="none"
        android:src="@drawable/ingenico" />
    
    <AnalogClock
        android:id="@+id/ac1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />
    
    <ImageView
        android:id="@+id/buttonBin"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textViewTotalCart"
        android:layout_marginTop="6dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:src="@drawable/bin" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv2"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="28dp"
        android:text="@string/str_cartlist"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewTotalCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#8C8B89"
        android:text=""
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/buttonBuyAll"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/butActiveCodebar"
        android:layout_toLeftOf="@+id/butActiveCodebar"
        android:layout_marginRight="10dp"
        android:src="@drawable/label_blue_buy" />
    
    <ImageView
        android:id="@+id/butActiveCodebar"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonBin"
        android:layout_marginTop="2dp"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:src="@drawable/bar_code_reader_activation" />

</RelativeLayout>