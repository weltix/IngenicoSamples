<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    

	<TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
		android:layout_marginLeft="5dp"
        android:text="@string/loops_number" />	
    <EditText
        android:id="@+id/editText_loops_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:inputType="numberDecimal" >
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginTop="40dp"
        android:text="@string/delay" />
    <EditText
        android:id="@+id/editText_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/editText_loops_number"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button_loop_do_transaction"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="50dp"
        android:text="@string/button_dotransaction" />

    <Button
        android:id="@+id/button_loop_printbmp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_loop_do_transaction"
        android:layout_below="@+id/button_loop_do_transaction"
        android:layout_marginTop="10dp"
        android:text="@string/button_printbitmap" />

    <Button
        android:id="@+id/button_loop_print_text"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_loop_printbmp"
        android:layout_below="@+id/button_loop_printbmp"
        android:layout_marginTop="10dp"
        android:text="@string/button_printtext" />

    <Button
        android:id="@+id/button_loop_stop"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_loop_print_text"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:text="@string/button_stop"
        android:background="@drawable/button_cancel" />
		
	<TextView
        android:id="@+id/textView_loop_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignLeft="@+id/button_loop_print_text"
        android:layout_below="@+id/button_loop_print_text"
        android:layout_marginTop="25dp"
		android:layout_marginLeft="5dp" />

</RelativeLayout>